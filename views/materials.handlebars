<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{title}}</h1>
        <form class="clearfix mb-4" method="POST" action="">
          <div class="form-group">
            <label for="material-name">Name:</label>
            <input type="text" id="material-name" class="form-control" aria-describedby="material-name" placeholder="Enter material name">
          </div>
          
          <button id="materials-submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Materials:</h3>
        <ul id="materials-list" class="list-group">
          {{#each materials}}
          <li class="list-group-item">
            {{this.name}}
            <div class="float-right">
              <button class="btn btn-danger material-delete" data-id="{{this.id}}">ï½˜</button>
            </div>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>
 <script type="text/javascript" src="/js/members.js"></script>
 <script type="text/javascript" src="/js/material.js"></script>

